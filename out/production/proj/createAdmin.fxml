                  <TextField fx:id="adminName" promptText="Name">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <PasswordField fx:id="adminPassword" accessibleText="*************" promptText="Password">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
