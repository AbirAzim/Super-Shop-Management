<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.AddCustomer">
   <children>
      <Pane layoutY="-6.0" prefHeight="74.0" prefWidth="619.0" style="-fx-background-color: Black;">
         <children>
            <Label layoutX="175.0" layoutY="10.0" prefHeight="55.0" prefWidth="274.0" text="New Customer" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="38.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <HBox layoutY="68.0" prefHeight="334.0" prefWidth="619.0" style="-fx-background-color: #03C9A9;">
         <children>
            <VBox prefHeight="334.0" prefWidth="210.0" />
            <VBox prefHeight="334.0" prefWidth="217.0">
               <children>
                  <TextField fx:id="customerName" promptText="Name">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin></TextField>
                  <TextField fx:id="customerId" layoutX="10.0" layoutY="10.0" promptText="Id">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin></TextField>
                  <TextField fx:id="customerTotalBrought" layoutX="10.0" layoutY="35.0" promptText="Total Brought">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin></TextField>
                  <ComboBox fx:id="selectedType" onAction="#typingCast" prefHeight="25.0" prefWidth="216.0" promptText="Select Cusomer Type">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Button mnemonicParsing="false" onAction="#addNewCustomer" prefHeight="24.0" prefWidth="56.0" style="-fx-background-color: Red;" text="Add" textFill="WHITE">
                     <VBox.margin>
                        <Insets left="80.0" top="20.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="11.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#backToThePreviousMenu" prefHeight="24.0" prefWidth="56.0" style="-fx-background-color: Black;" text="Back" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="11.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="80.0" top="40.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
